<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:background="@color/colorskybluethick"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/white"
            android:fontFamily="@font/nsbold"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:text="Welcome,User"
            android:textSize="16sp"
            android:id="@+id/tvHomeUserName"
            android:layout_width="0dp"
            android:layout_weight="0.75"
            android:layout_height="wrap_content"/>

        <Button
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/nsbold"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:text="Logout"
            android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnlogout"/>

    </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:elevation="0dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp">

            <com.ouattararomuald.slider.ImageSlider
                android:id="@+id/image_slider"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/textcolor"
            android:layout_marginLeft="15dp"
            android:textSize="20sp"
            android:fontFamily="@font/nsbold"
            android:text="Categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFindADoctor"
                android:drawablePadding="10dp"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/ic_doctor"
                android:fontFamily="@font/nsbold"
                android:textSize="16sp"
                android:textColor="@color/textcolor"
                android:layout_width="0dp"
                android:layout_weight="0.30"
                android:layout_height="150dp"
                android:text="Find a Doctor"/>


            <TextView
                android:id="@+id/tvBookApp"
                android:drawablePadding="10dp"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/ic_appointment"
                android:fontFamily="@font/nsbold"
                android:textSize="16sp"
                android:textColor="@color/textcolor"
                android:layout_width="0dp"
                android:layout_weight="0.39"
                android:layout_height="150dp"
                android:text="Book an appointment"/>

            <TextView
                android:id="@+id/tvMedicneShops"
                android:drawablePadding="10dp"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/ic_medicine"
                android:fontFamily="@font/nsbold"
                android:textSize="16sp"
                android:textColor="@color/textcolor"
                android:layout_width="0dp"
                android:layout_weight="0.30"
                android:layout_height="150dp"
                android:text="Medicine"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFitnessReport"
                android:drawablePadding="10dp"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/ic_fitness_report"
                android:fontFamily="@font/nsbold"
                android:textSize="16sp"
                android:textColor="@color/textcolor"
                android:layout_width="0dp"
                android:layout_weight="0.30"
                android:layout_height="150dp"
                android:text="Fitness report"/>


            <TextView
                android:id="@+id/tvEmergencyCall"
                android:drawablePadding="10dp"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/ic_emergencies"
                android:fontFamily="@font/nsbold"
                android:textSize="16sp"
                android:textColor="@color/textcolor"
                android:layout_width="0dp"
                android:layout_weight="0.39"
                android:layout_height="150dp"
                android:text="Emergency"/>

            <TextView
                android:id="@+id/tvOnlineConsulting"
                android:drawablePadding="10dp"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/ic_online_doctor"
                android:fontFamily="@font/nsbold"
                android:textSize="16sp"
                android:textColor="@color/textcolor"
                android:layout_width="0dp"
                android:layout_weight="0.30"
                android:layout_height="150dp"
                android:text="Online Consulting"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFitnessTracker"
                android:drawablePadding="10dp"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/ic_fitnesss_tracker"
                android:fontFamily="@font/nsbold"
                android:textSize="16sp"
                android:textColor="@color/textcolor"
                android:layout_width="0dp"
                android:layout_weight="0.30"
                android:layout_height="150dp"
                android:text="Fitness Tracker"/>


            <TextView
                android:id="@+id/tvContactUs"
                android:drawablePadding="10dp"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/ic_emergency_call"
                android:fontFamily="@font/nsbold"
                android:textSize="16sp"
                android:textColor="@color/textcolor"
                android:layout_width="0dp"
                android:layout_weight="0.39"
                android:layout_height="150dp"
                android:text="Contact  us"/>


        </LinearLayout>




    </LinearLayout>
</ScrollView>