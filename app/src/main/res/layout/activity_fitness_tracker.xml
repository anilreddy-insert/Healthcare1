<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FitnessTracker">


    <LinearLayout
        android:background="@color/colorskybluethick"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivFitnessTrackerBack"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_back_arrow"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/white"
            android:fontFamily="@font/nsbold"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:text="FitnessTracker"
            android:textSize="16sp"
            android:id="@+id/tvHomeUserName"
            android:layout_width="0dp"
            android:layout_weight="0.75"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/rvFitnessTracker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>